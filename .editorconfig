root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.py]
indent_size = 2

[{*.bat}]
end_of_line = crlf

[{*.sh, Makefile, *.make}]
indent_style = tab
indent_size = 8

[*.{diff,md}]
trim_trailing_whitespace = false

